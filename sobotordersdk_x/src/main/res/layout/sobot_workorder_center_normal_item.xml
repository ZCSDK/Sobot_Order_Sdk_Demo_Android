<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_wo_second_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sobot_work_order_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/sobot_wo_item_setting_selector"
        android:paddingTop="@dimen/sobot_list_item_padding_top"
        android:paddingBottom="@dimen/sobot_list_item_padding_top">

        <TextView
            android:id="@+id/sobot_work_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:maxWidth="300dp"
            android:maxLines="1"
            android:text="@string/sobot_my_kefu_group_order"
            android:textColor="@color/sobot_wo_wenzi_gray1"
            android:textSize="@dimen/sobot_sp_14" />

        <TextView
            android:id="@+id/sobot_unread_work_order_msg_num_item"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/sobot_work_order_title"
            android:background="@drawable/sobot_btn_bg_msg_bubble"
            android:textColor="@color/sobot_wo_wenzi_white_to_gray1"
            android:visibility="visible" />

        <TextView
            android:id="@+id/sobot_work_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/sobot_btn_bg_msg_bubble"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textColor="@color/sobot_wo_wenzi_white_to_gray1"
            android:textSize="@dimen/sobot_sp_12" />

        <ImageView
            android:id="@+id/sobot_img_arrow_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sobot_icon_wo_arrow_icon" />
    </RelativeLayout>

    <View
        android:id="@+id/sobot_v_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/sobot_wo_line_color"/>
</LinearLayout>