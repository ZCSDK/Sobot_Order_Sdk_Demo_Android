<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sobot_wo_second_bg_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/work_order_category_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/sobot_wo_wenzi_gray1"
        android:textSize="@dimen/sobot_sp_16" />

    <View
        android:id="@+id/work_order_category_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/sobot_wo_theme_color" />

</LinearLayout>