<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_wo_second_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/work_order_category_small_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_wo_second_bg_color"
        android:gravity="center_vertical">


        <TextView
            android:id="@+id/work_order_category_small_title"
            style="?android:attr/textViewStyle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:padding="10dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/sobot_wo_wenzi_gray1"
            android:textSize="@dimen/sobot_sp_14" />

        <ImageView
            android:id="@+id/work_order_category_small_ishave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sobot_icon_wo_arrow_icon"
            android:contentDescription="@null"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/order_category_small_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dip"
        android:background="@color/sobot_wo_line_color" />

</LinearLayout>