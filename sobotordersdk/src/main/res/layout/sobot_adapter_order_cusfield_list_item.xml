<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sobot_wo_second_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sobot_wo_second_bg_color"
        android:orientation="vertical">

        <!--   文本类型   -->
        <RelativeLayout
            android:id="@+id/work_order_customer_field_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp">

            <TextView
                android:id="@+id/work_order_customer_field_text_lable"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_single"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:background="@null"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textColorHint="@color/sobot_wo_wenzi_gray2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:background="@null"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textColorHint="@color/sobot_wo_wenzi_gray2"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:background="@null"
                android:inputType="numberDecimal"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textColorHint="@color/sobot_wo_wenzi_gray2"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/work_order_customer_date_text_click"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toLeftOf="@+id/work_order_customer_field_text_img"
                android:layout_toRightOf="@+id/work_order_customer_field_text_lable"
                android:gravity="center_vertical"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textColorHint="@color/sobot_wo_wenzi_gray2"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/work_order_customer_field_text_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/sobot_icon_wo_arrow_icon" />

        </RelativeLayout>

        <!--   多行文本   -->
        <LinearLayout
            android:id="@+id/work_order_customer_field_more_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sobot_wo_second_bg_color"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/work_order_customer_field_more_text_lable"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/work_order_customer_field_text_more_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/work_order_customer_field_more_text_lable"
                android:background="@null"
                android:maxLength="150"
                android:minHeight="102dp"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textColorHint="@color/sobot_wo_wenzi_gray2"
                android:textSize="14sp" />

        </LinearLayout>

        <!--   组合字段   -->
        <LinearLayout
            android:id="@+id/work_order_customer_field_group_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/sobot_wo_second_bg_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/work_order_customer_field_group_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="@string/sobot_combined_field_name_string"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textSize="14sp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/work_order_customer_field_group__rl_add"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/work_order_customer_field_group_add"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/sobot_textview_border"
                android:gravity="center"
                android:text="@string/sobot_add_string"
                android:textColor="@color/sobot_wo_wenzi_gray1" />

            <TextView
                android:id="@+id/work_order_customer_field_group_summy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="100dp"
                android:gravity="center"
                android:text="@string/sobot_price_string"
                android:textColor="@color/sobot_wo_wenzi_gray1"
                android:textStyle="bold" />
        </RelativeLayout>

        <View
            android:id="@+id/work_order_customer_field_text_bootom_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginLeft="15dp"
            android:background="@color/sobot_wo_line_color" />

    </LinearLayout>

</LinearLayout>