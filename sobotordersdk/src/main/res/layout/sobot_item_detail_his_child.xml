<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/sobot_wo_second_bg_color"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@color/sobot_wo_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/normal_cumtomer_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/tv_key"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="start"
                android:textColor="@color/sobot_wo_wenzi_gray2"
                android:textSize="@dimen/sobot_sp_14"
                tools:text="" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sobot_wo_wenzi_gray1"
                    android:textSize="@dimen/sobot_sp_14"
                    tools:text="" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sobot_wo_wenzi_gray1"
                    android:textSize="@dimen/sobot_sp_14"
                    android:visibility="gone"
                    tools:text="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/group_cumtomer_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_key1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:textColor="@color/sobot_wo_wenzi_gray2"
                android:textSize="@dimen/sobot_sp_14"
                tools:text="" />

        </LinearLayout>

        <com.sobot.workorder.weight.SobotListViewForScrollView
            android:id="@+id/result_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:divider="@null" />

    </LinearLayout>

</LinearLayout>