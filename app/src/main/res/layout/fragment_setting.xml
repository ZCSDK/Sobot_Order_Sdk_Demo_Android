<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_to_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_bg_color"
        android:gravity="center"
        android:padding="20dp"
        android:text="启动工单页面"
        android:textColor="@color/sobot_wo_blue_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_line_color" />


    <EditText
        android:id="@+id/order_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/biankuang"
        android:hint="请输入工单id"
        android:padding="8dp"
        android:textColor="@color/sobot_common_gray1"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_open_order_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_bg_color"
        android:gravity="center"
        android:padding="20dp"
        android:text="打开指定工单"
        android:textColor="@color/sobot_wo_blue_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_line_color" />


    <EditText
        android:id="@+id/userid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/biankuang"
        android:hint="用户id"
        android:padding="8dp"
        android:textColor="@color/sobot_common_gray1"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/nick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/biankuang"
        android:hint="用户昵称"
        android:padding="8dp"
        android:textColor="@color/sobot_common_gray1"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/tv_create_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_bg_color"
        android:gravity="center"
        android:padding="20dp"
        android:text="创建工单"
        android:textColor="@color/sobot_wo_blue_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_line_color" />

    <TextView
        android:id="@+id/tv_exit_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_wo_bg_color"
        android:gravity="center"
        android:padding="20dp"
        android:text="退出登录"
        android:textColor="@color/sobot_wo_blue_color" />

</LinearLayout>